<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE quiz [
    <!ELEMENT quiz (disciplina, professor, turma, data, questões)>
    <!ATTLIST quiz versao CDATA #REQUIRED>
    <!ELEMENT disciplina (#PCDATA)>
    <!ELEMENT professor (nome, matrícula?)>
    <!ELEMENT nome (#PCDATA)>
    <!ELEMENT matrícula (#PCDATA)>
    <!ELEMENT turma (#PCDATA)>
    <!ELEMENT data (#PCDATA)>
    <!ELEMENT questões (questão+)>
    <!ELEMENT questão (enunciado, pontuação, alternativas)>
    <!ELEMENT enunciado (#PCDATA)>
    <!ELEMENT pontuação (#PCDATA)>
    <!ELEMENT alternativas (alternativa+)>
    <!ELEMENT alternativa (#PCDATA)>
    <!ATTLIST alternativa correta (sim|nao) #REQUIRED>
]>
<quiz versao="1.0">
    <disciplina>Matemática</disciplina>
    <professor>
        <nome>Prof. João da Silva</nome>
        <matrícula>12345</matrícula>
    </professor>
    <turma>A</turma>
    <data>2024-07-17</data>
    <questões>
        <questão>
            <enunciado>Qual é o resultado de 2 + 2?</enunciado>
            <pontuação>1 ponto</pontuação>
            <alternativas>
                <alternativa correta="sim">4</alternativa>
                <alternativa correta="nao">3</alternativa>
                <alternativa correta="nao">5</alternativa>
                <alternativa correta="nao">6</alternativa>
            </alternativas>
            </questão>
        <questão>
            <enunciado>Qual é a capital do Brasil?</enunciado>
            <pontuação>1 ponto</pontuação>
            <alternativas>
                <alternativa correta="sim">Brasília</alternativa>
                <alternativa correta="nao">Rio de Janeiro</alternativa>
                <alternativa correta="nao">São Paulo</alternativa>
                <alternativa correta="nao">Belo Horizonte</alternativa>
            </alternativas>
        </questão>
        <questão>
            <enunciado>Quanto é 5 vezes 5?</enunciado>
            <pontuação>1 ponto</pontuação>
            <alternativas>
                <alternativa correta="sim">25</alternativa>
                <alternativa correta="nao">20</alternativa>
                <alternativa correta="nao">30</alternativa>
                <alternativa correta="nao">15</alternativa>
            </alternativas>
            </questão>
        <questão>
            <enunciado>Qual é a fórmula da água?</enunciado>
            <pontuação>1 ponto</pontuação>
            <alternativas>
                <alternativa correta="sim">H2O</alternativa>
                <alternativa correta="nao">CO2</alternativa>
                <alternativa correta="nao">NaCl</alternativa>
                <alternativa correta="nao">O2</alternativa>
            </alternativas>
        </questão>
        <questão>
            <enunciado>Quem escreveu Dom Casmurro?</enunciado>
            <pontuação>1 ponto</pontuação>
            <alternativas>
                <alternativa correta="sim">Machado de Assis</alternativa>
                <alternativa correta="nao">Jorge Amado</alternativa>
                <alternativa correta="nao">Guimarães Rosa</alternativa>
                <alternativa correta="nao">Carlos Drummond de Andrade</alternativa>
            </alternativas>
        </questão>
    </questões>
</quiz>
